<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="1000">
        <OnSwipe
            motion:touchRegionId="@id/vLine"
            motion:dragDirection="dragUp" />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/rvListUser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:translationZ="2dp"
            android:background="@drawable/my_scrollview"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/btnAddUser"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/btnDeleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/rvListUser"
            android:drawableStart="@drawable/ic_delete_all"
            android:text="@string/delete_all"
            android:drawablePadding="10dp"
            android:translationZ="3dp"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/my_button_delete_all"
            motion:visibilityMode="ignore"
            motion:layout_constraintStart_toStartOf="@id/rvListUser"
            motion:layout_constraintEnd_toEndOf="@id/rvListUser"/>
        <Constraint
            android:id="@+id/ivList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_list"
            android:translationZ="3dp"
            android:layout_marginBottom="20dp"
            motion:visibilityMode="ignore"
            motion:layout_constraintStart_toStartOf="@id/rvListUser"
            motion:layout_constraintBottom_toTopOf="@id/tvLabel"
            motion:layout_constraintEnd_toEndOf="@id/rvListUser"/>
        <Constraint
            android:id="@+id/tvLabel"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:translationZ="3dp"
            motion:visibilityMode="ignore"
            android:text="@string/click_the_button_to_display_the_full_list_of_users"
            motion:layout_constraintTop_toBottomOf="@id/vLine"
            motion:layout_constraintStart_toStartOf="@id/rvListUser"
            motion:layout_constraintBottom_toBottomOf="@id/rvListUser"
            motion:layout_constraintEnd_toEndOf="@id/rvListUser"/>
        <Constraint
            android:id="@+id/btnShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_all"
            android:drawableStart="@drawable/ic_show"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:translationZ="3dp"
            android:drawablePadding="10dp"
            android:background="@drawable/my_button_show"
            android:textColor="@color/white"
            motion:visibilityMode="ignore"
            motion:layout_constraintTop_toBottomOf="@id/tvLabel"
            motion:layout_constraintStart_toStartOf="@id/rvListUser"
            motion:layout_constraintEnd_toEndOf="@id/rvListUser"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/rvListUser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:translationZ="2dp"
            android:background="@drawable/my_scrollview"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/btnDeleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/rvListUser"
            android:drawableStart="@drawable/ic_delete_all"
            android:text="@string/delete_all"
            android:drawablePadding="10dp"
            android:translationZ="3dp"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/my_button_delete_all"
            motion:visibilityMode="ignore"
            motion:layout_constraintStart_toStartOf="@id/rvListUser"
            motion:layout_constraintEnd_toEndOf="@id/rvListUser"/>
        <Constraint
            android:id="@+id/ivList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_list"
            android:translationZ="3dp"
            android:layout_marginBottom="20dp"
            motion:visibilityMode="ignore"
            motion:layout_constraintStart_toStartOf="@id/rvListUser"
            motion:layout_constraintBottom_toTopOf="@id/tvLabel"
            motion:layout_constraintEnd_toEndOf="@id/rvListUser"/>
        <Constraint
            android:id="@+id/tvLabel"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:translationZ="3dp"
            android:text="@string/click_the_button_to_display_the_full_list_of_users"
            motion:visibilityMode="ignore"
            motion:layout_constraintTop_toBottomOf="@id/vLine"
            motion:layout_constraintStart_toStartOf="@id/rvListUser"
            motion:layout_constraintBottom_toBottomOf="@id/rvListUser"
            motion:layout_constraintEnd_toEndOf="@id/rvListUser"/>
        <Constraint
            android:id="@+id/btnShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_all"
            android:drawableStart="@drawable/ic_show"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:translationZ="3dp"
            android:drawablePadding="10dp"
            android:background="@drawable/my_button_show"
            android:textColor="@color/white"
            motion:visibilityMode="ignore"
            motion:layout_constraintTop_toBottomOf="@id/tvLabel"
            motion:layout_constraintStart_toStartOf="@id/rvListUser"
            motion:layout_constraintEnd_toEndOf="@id/rvListUser"/>
    </ConstraintSet>
</MotionScene>
