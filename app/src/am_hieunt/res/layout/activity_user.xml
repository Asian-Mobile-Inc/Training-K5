<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:showPaths="true"
    app:layoutDescription="@xml/my_scene"
    tools:context=".issue8.View.UserActivity">
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationZ="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:text="@string/user_name" />
    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:translationZ="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textAlignment="center"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        tools:ignore="LabelFor" />
    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_age"
        android:translationZ="0dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtUserName"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/edtAge"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:translationZ="0dp"
        android:textSize="28sp"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvAge"
        tools:ignore="LabelFor" />
    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edtAge"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:translationZ="0dp"
        android:drawableStart="@drawable/ic_add"
        android:drawablePadding="10dp"
        android:text="@string/add_user"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/blue_9AA8FF"
        android:background="@drawable/my_button_add_user"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:translationZ="3dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/my_scrollview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/vLine"
        android:layout_width="74dp"
        android:layout_height="8dp"
        android:translationZ="4dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rvListUser" />
</androidx.constraintlayout.motion.widget.MotionLayout>