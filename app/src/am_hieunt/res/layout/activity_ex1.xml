<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="137dp"

        android:layout_marginTop="170dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="570dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/app_logo" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="441dp"
        android:background="@drawable/myedittext"
        android:drawableRight="@drawable/streamline_delete_1_remix"
        android:ems="10"
        android:hint="Phone or email"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:paddingRight="16dp"
        android:paddingBottom="14dp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="344dp"
        android:background="@drawable/myedittext"
        android:drawableRight="@drawable/mi_eye"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:paddingRight="16dp"
        android:paddingBottom="14dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="253dp"
        android:background="@drawable/mybutton"
        android:text="Login"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>