<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivPhoto"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:src="@drawable/img_tanjiro"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        app:shapeAppearanceOverlay="@style/rounded_corner_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="5dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_heart_default"
        app:layout_constraintTop_toTopOf="@id/sivPhoto"
        app:layout_constraintEnd_toEndOf="@id/sivPhoto"/>
</androidx.constraintlayout.widget.ConstraintLayout>
