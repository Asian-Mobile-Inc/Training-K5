<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".issue10.view.MainActivity">
    <TextView
        android:id="@+id/tvAll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:textColor="@color/gray_D3D3D3"
        android:textSize="18sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:text="@string/all"
        android:textAlignment="center"
        android:background="@drawable/my_app"
        app:layout_constraintEnd_toStartOf="@+id/tvFavorite"/>
    <TextView
        android:id="@+id/tvFavorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_D3D3D3"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/favorite"
        android:textAlignment="center"
        android:background="@drawable/my_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAll"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:id="@+id/ibSelect"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_tick"
        android:background="@color/white"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvApp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/btnDownload"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constrainedHeight="true"/>
    <Button
        android:id="@+id/btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_download"
        android:drawablePadding="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="@string/download"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/my_button_download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAll"
        app:layout_constraintBottom_toBottomOf="parent"/>
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
