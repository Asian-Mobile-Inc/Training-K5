<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvStt"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/my_out_line_id"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tvStt"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/vLine"
        app:layout_constraintStart_toEndOf="@id/tvStt"/>
    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        android:scaleType="center"
        android:paddingStart="20dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@id/tvAge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />
    <View
        android:id="@+id/vLine"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/my_line_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvAge"/>
</androidx.constraintlayout.widget.ConstraintLayout>
