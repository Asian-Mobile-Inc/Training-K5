<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llExercise2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/tvCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="62dp"
        android:letterSpacing="0.01"
        android:text="@string/textview_text_calculator"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTerm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/textview_text_term_1"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtTerm1Input"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:autofillHints="Term 1"
        android:background="@drawable/bg_rounded_edittext"
        android:hint="@string/edittext_hint_team_1"
        android:inputType="number"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#BABABA"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnDeleteTerm1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="end"
        android:layout_marginTop="-35dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_delete"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTerm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/textview_text_term_2"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtTerm2Input"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:autofillHints="Team 1"
        android:background="@drawable/bg_rounded_edittext"
        android:hint="@string/edittext_hint_team_2"
        android:inputType="number"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="#BABABA"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivDeleteTerm2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="end"
        android:layout_marginTop="-35dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/imageview_content_description_delete"
        android:src="@drawable/ic_delete"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvWarningTerm2"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:text="@string/textview_text_number_can_t_divide_0"
        android:textColor="@color/red_F82B1F"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvOperations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/textview_text_operations"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llOperations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPlus"
            android:layout_width="72dp"
            android:layout_height="58dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_rounded_textview"
            android:contentDescription="@string/imageview_content_description_plus"
            android:scaleType="center"
            android:src="@drawable/ic_plus" />

        <ImageView
            android:id="@+id/ivMinus"
            android:layout_width="72dp"
            android:layout_height="58dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_rounded_textview"
            android:contentDescription="@string/imageview_content_description_minus"
            android:scaleType="center"
            android:src="@drawable/ic_minus" />

        <ImageView
            android:id="@+id/ivMultiply"
            android:layout_width="72dp"
            android:layout_height="58dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_rounded_textview"
            android:contentDescription="@string/imageview_content_description_multiply"
            android:scaleType="center"
            android:src="@drawable/ic_multiply" />

        <ImageView
            android:id="@+id/ivDivide"
            android:layout_width="72dp"
            android:layout_height="58dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_rounded_textview"
            android:contentDescription="@string/imageview_content_description_divide"
            android:scaleType="center"
            android:src="@drawable/ic_divide" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/textview_text_result"
        android:textColor="#1877F2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/textview_text_0"
        android:textColor="#1877F2"
        android:textSize="92sp"
        android:textStyle="bold" />
</LinearLayout>
