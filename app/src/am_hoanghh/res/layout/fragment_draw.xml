<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_home_rounded_textview"
        android:fontFamily="@font/fuzzy_bubbles"
        android:paddingHorizontal="130dp"
        android:paddingVertical="50dp"
        android:text="@string/textview_text_draw_text"
        android:textColor="@color/black_181818"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/ivPaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPaper"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/imageview_content_description_paper"
        android:src="@drawable/img_draw_paper"
        app:layout_constraintEnd_toStartOf="@id/ivPencil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHome" />

    <ImageView
        android:id="@+id/ivPencil"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/imageview_content_description_pencil"
        android:src="@drawable/img_draw_pencil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPaper"
        app:layout_constraintTop_toBottomOf="@id/tvHome" />
</androidx.constraintlayout.widget.ConstraintLayout>
