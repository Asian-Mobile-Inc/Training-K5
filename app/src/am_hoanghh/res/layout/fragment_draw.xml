<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivPaper"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/imageview_content_description_paper"
        android:src="@drawable/img_draw_paper"
        app:layout_constraintEnd_toStartOf="@id/ivPencil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPencil"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/imageview_content_description_pencil"
        android:src="@drawable/img_draw_pencil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPaper"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
