<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle -->
    <item android:id="@android:id/background">
        <shape android:shape="oval">
            <solid android:color="#33000000"/> <!-- light gray, semi-transparent -->
        </shape>
    </item>

    <!-- Secondary Progress (optional) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="oval">
                <solid android:color="#AA000000"/> <!-- darker gray if needed -->
            </shape>
        </clip>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <rotate>
            <shape android:shape="oval">
                <stroke
                    android:width="3dp"
                    android:color="#8A2BE2" /> <!-- blue-violet -->
            </shape>
        </rotate>
    </item>
</layer-list>
